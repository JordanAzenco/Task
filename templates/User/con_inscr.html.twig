  </div>
  <div class="col-6 form-log d-flex flex-column align-items-center justify-content-between">
    <h2>Inscription</h2>
        <input type="text" id="userName" name="userNameInsc" required="required" maxlenght="20" class="" placeholder="Votre nom">
        <input type="email" pattern="[^@]+@[^@]+\.[a-zA-Z]{2,6}" id="userEmail" name="userEmailInsc" required="required" maxlenght="20" class="" placeholder="Votre email">
        <input type="password" id="userPassword" name="userPasswordInsc" required="required" maxlenght="20" class="" placeholder="Votre password">
        <input type="password" id="userPlainPassword" name="userPlainPasswordInsc" required="required" maxlenght="20" class="listTask" placeholder="Recopiez votre password">
         <input type="hidden" name="_csrf_token" id="crypt_token"
           value="{{ csrf_token('authenticate') }}"
    >
        <button type="submit" id="user_insc_btn" name="user_insc_btn" onclick="log_inscr.ajax_inscription();">Inscrivez vous</button>
