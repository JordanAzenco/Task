<div class="col-12 d-flex justify-content-center">
<h1> Stock your task </h1>
</div>
  <div class="col-6 form-log d-flex flex-column align-items-center justify-content-between">
    <h2>Connexion</h2>
        <input type="text" id="logName" name="userName" required="required" maxlenght="20"  class="" placeholder="Votre nom">
        <input type="password" id="logPassword" name="userPassword" required="required" class="" maxlenght="20"  placeholder="Votre password">
          <input type="hidden" name="_csrf_token" id="crypt_token"
           value="{{ csrf_token('authenticate') }}">
